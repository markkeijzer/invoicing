<h1>Listing wines</h1>

<table>
  <thead>
    <tr>
      <th>Naam</th>
      <th>Prijs</th>
      <th>Doosprijs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.naam %></td>
        <td><%= wine.prijs %></td>
        <td><%= wine.doosprijs %></td>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wine', new_wine_path %>
